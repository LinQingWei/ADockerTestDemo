<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_activity_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ACTIVITY TEST" />

        <Button
            android:id="@+id/btn_resolver_activity_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="RESOLVER ACTIVITY TEST" />

        <Button
            android:id="@+id/btn_service_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SERVICE TEST" />

        <Button
            android:id="@+id/btn_static_broadcast_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="STATIC BROADCAST TEST" />

        <Button
            android:id="@+id/btn_dynamic_broadcast_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="DYNAMIC BROADCAST TEST" />

        <Button
            android:id="@+id/btn_content_provider_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CONTENTPROVIDER TEST" />

        <Button
            android:id="@+id/btn_dialog_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="DIALOG TEST" />

        <Button
            android:id="@+id/btn_notification_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="NOTIFICATION TEST" />

        <Button
            android:id="@+id/btn_job_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="JOB TEST" />

    </LinearLayout>

</ScrollView>